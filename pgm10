<html>
   <body>
       <?php
          $a = 100;
           ++$a;
            echo $a;
			
			 $a = 100;
           $a++;
            echo $a;
			
			 $a = 100;
           --$a;
            echo $a;
			
			 $a = 100;
           $a--;
            echo $a;
		
         ?>
     </body>
</html>
